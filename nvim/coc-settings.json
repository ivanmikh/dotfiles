{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls-root", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": "/home/ivan/.ccls-cache"
        },
        "client": {
          "snippetSupport": true
        },
        "index": {
            "onChange": true
        },
        "highlight": {
            "lsRanges" : true
        }
      }
    }
  },
  "diagnostic-languageserver.filetypes": {
    "vim": "vint",
    "sh": "shellcheck",
    "cpp": "clang-format",
    "c": "clang-format"
  },
  "diagnostic-languageserver.formatters": {
    "clang-format": {
      "command": "clang-format"
    }
  }
}


