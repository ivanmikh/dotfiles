# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto --group-directories-first'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# colored GCC warnings and errors
export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'

# colored o+w directories
export LS_COLORS="$LS_COLORS:ow=1;34:tw=1;34:"

export FZF_DEFAULT_OPTS='--layout=reverse --border --exact -m'
export EDITOR='nvim'
export TERMCMD='alacritty'
export PYTHONSTARTUP="/home/ivan/.pythonrc.py"
export PROMPT_DIRTRIM=3

# some more ls aliases
alias ll='ls -vFlAh'
alias la='ls -vFlAh'
alias l='ls -vCF'

alias del=trash
alias sudo='sudo '

alias wttr='curl http://wttr.in/Vancouver'

# tmux sessions with ranger and nvimserver
alias fm="tmux new-session lf"

# lf
lfcd () {
    # `command` is needed in case `lfcd` is aliased to `lf`
    cd "$(command lf -print-last-dir "$@")"
}
alias lf='lfcd'

# zoxide
eval "$(zoxide init zsh)"

source ~/.profile

# Add this to /etc/environment to fix blurry text in web browsers
# FREETYPE_PROPERTIES="cff:no-stem-darkening=0 autofitter:no-stem-darkening=0"
