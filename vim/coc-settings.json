{
    "clangd.enabled": true,
    "clangd.arguments": ["-j=2"],
    "clangd.signature.target": "echo",
    "clangd.semanticHighlighting": true,
    "semanticTokens.filetypes": ["c", "cpp", "h", "x"],

    "pyright.inlayHints.functionReturnTypes" : false,
    "pyright.inlayHints.variableTypes": false,
    "pyright.inlayHints.reportAttributeAccessIssue": "none",
    "python.analysis.stubPath": "/home/ivan/.config/python-type-stubs",

    "inlayHint.enable": false,
    "clangd.path": "/usr/bin/clangd",

    "rust-analyzer.enable": true,
    "workspace.ignoredFolders": [ "$HOME", "$HOME/.cargo/**", "$HOME/.rustup/**" ]
}
